   "source": [
    "import time\n",
    "\n",
    "def countdown():\n",
    "    t = int(input(\"Enter the length of the countdown in seconds \"))\n",
    "    while t:\n",
    "        min , sec = divmod(t,60)\n",
    "        timer = min , sec\n",
    "        print(timer , end = \"\\r\")\n",
    "        time.sleep(1)\n",
    "        t -= 1\n",
    "    print(\"Fire in the hole\")\n",
    "countdown()  "
   ]
